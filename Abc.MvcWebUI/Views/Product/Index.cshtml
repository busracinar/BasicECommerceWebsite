@model IEnumerable<Abc.MvcWebUI.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

    <div class="container mt-5 pb-5">
        <h2>Ürün Listesi</h2>
        <hr/>
        <p>
            @Html.ActionLink("Yeni Ürün", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th style="width: 90px;">
                    @Html.DisplayNameFor(model => model.IsApproved)
                </th>
                <th style="width: 150px;">
                    @Html.DisplayNameFor(model => model.IsHome)
                </th>
                <th style="width: 135px;"></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                <img src="~/Upload/@item.Image" width="70"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.IsApproved)
                {
                    <label class="badge badge-success">
                        <i class="fa fa-check-circle" aria-hidden="true"></i>
                        Evet
                    </label>
                }
                else
                {
                    <label class="badge badge-danger">
                        <i class="fa fa-times-circle" aria-hidden="true"></i>
                        Hayır
                    </label>
                }
            </td>
            <td>
                @if (item.IsHome)
                {
                    <label class="badge badge-success">
                        <i class="fa fa-check-circle" aria-hidden="true"></i>
                        Evet
                    </label>
                }
                else
                {
                    <label class="badge badge-danger">
                        <i class="fa fa-times-circle" aria-hidden="true"></i>
                        Hayır
                    </label>
                }
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" }) 
                
                @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
            }

        </table>
        </div>
